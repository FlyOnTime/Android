<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#024897</item>
    </style>

    <style name="ContentImageBadgeTitle" parent="AppTheme">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ContentImageBadgeText" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ContentMainBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/contentBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TitleBadgeText" parent="AppTheme">
        <item name="android:textColor">@color/titleBadgeText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/titleBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppBar">
        <item name="android:background">#0258BD</item>
    </style>

    <style name="DarkGreyFont">
        <item name="android:textColor">#191919</item>
    </style>

    <style name="CardTitle" parent="DarkGreyFont">
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardContentText" parent="DarkGreyFont">
        <item name="fontPath">fonts/Raleway-Thin.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DateTextHeader" parent="DarkGreyFont">
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileHeader">
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProfileFlight">
        <item name="fontPath">fonts/Raleway-Light.ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProfileFlightData" parent="ProfileFlight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileFlightDate" parent="ProfileFlight">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CircleTime">
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
